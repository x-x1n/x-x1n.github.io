<body>
    <!-- ✅ 4. 集中文字编辑内容 (JavaScript Object) -->
    <script>
        // 这是所有可编辑文字内容的中央存储区
        const editableContent = {
            title: "PORTFOLIO",
            subtitle: "这里是简介之类的",
            year: "2025",
            author: "Xinyuan Li",
            buttonDefaultText: "按钮1",
            buttonExpandedText: "内容1"
        };
    </script>
    
    <!-- ✅ 7. 语言切换按钮 (Language Switcher) -->
    <div class="language-switcher">
        <button onclick="window.location.href='https://x-x1n.github.io/zh'" class="lang-button">中</button>
        <button onclick="window.location.href='https://x-x1n.github.io/fr'" class="lang-button">FR</button>
        <button onclick="window.location.href='https://x-x1n.github.io/jp'" class="lang-button">日</button>
    </div>

    <!-- ✅ 3. 荧光色块，从上方滑入（已应用缩窄和底部渐变） -->
    <div class="highlight"></div>

    <!-- ✅ 1. 主标题（已放大） -->
    <div class="title" id="mainTitle"></div>

    <!-- ✅ 2. 中文副标题（已应用新字体） -->
    <div class="subtitle" id="subTitle"></div>

    <!-- ✅ 6. 交互按钮 -->
    <button class="action-button" id="actionButton"></button>

    <!-- ✅ 年份 -->
    <div class="year" id="yearText"></div>

    <!-- 
        ✅ 5. 箭头图 (Arrow) 
        替换为 images/arrow.png 文件路径。
    -->
    <img
        src="images/arrow.png"
        alt="arrow"
        class="arrow"
    >

    <!-- ✅ 作者信息 -->
    <div class="author" id="authorText"></div>


    <script>
        // 初始化函数：将文本内容从 JS 对象渲染到 DOM
        function initializeContent() {
            document.getElementById('mainTitle').textContent = editableContent.title;
            document.getElementById('subTitle').textContent = editableContent.subtitle;
            document.getElementById('yearText').textContent = editableContent.year;
            document.getElementById('authorText').textContent = editableContent.author;
            
            const button = document.getElementById('actionButton');
            button.textContent = editableContent.buttonDefaultText; // 设置按钮初始文本
            button.addEventListener('click', toggleButtonState);
        }

        // ✅ 6. 按钮点击事件处理函数
        function toggleButtonState() {
            const button = document.getElementById('actionButton');
            // 切换 CSS 类实现平滑放大
            const isExpanded = button.classList.toggle('expanded'); 

            if (isExpanded) {
                // 放大状态：显示 “内容1”
                button.textContent = editableContent.buttonExpandedText;
            } else {
                // 原始状态：显示 “按钮1”
                button.textContent = editableContent.buttonDefaultText;
            }
        }

        // 在页面加载完成后执行初始化
        window.onload = initializeContent;
    </script>
</body>
</html>
