<script>
  // === 按钮点击切换动画和文字 ===
  const btn = document.getElementById('btn1');
  btn.addEventListener('click', () => {
    if(btn.classList.contains('expanded')){
      btn.classList.remove('expanded');
      btn.textContent = "按钮1";
    } else {
      btn.classList.add('expanded');
      btn.textContent = "内容1";
    }
  });
</script>

