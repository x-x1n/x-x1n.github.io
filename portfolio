    /* 按钮点击后放大的状态 */
    .action-button.expanded {
        transform: scale(1.2);
    }

    /* === 动画关键帧 === */
    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-100%);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
